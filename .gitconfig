[user]
    name = Akshay Hegde
[credential]
    helper = osxkeychain
[github]
    user = ajh17
    token = "<%= Keychain['github.com/api'].password %>"
    password = "<%= Keychain['github.com'].password %>"
    ssl=true
[bitbucket]
    user = ajh_17
    password = "<%= Keychain['bitbucket.com'].password %>"
    ssl = true
[gitlab]
    user = ajh17
    password = "<%= Keychain['gitlab.com'].password %>"
    ssl = true
[init]
    templatedir = ~/.git_template
[commit]
    gpgsign = true
    verbose = true
[push]
    default = current
[color]
    ui = auto
[color "diff"]
    old = red strike
[advice]
    statusHints = false
    resolveConflict = false
[core]
    excludesfile = /Users/ajh/.gitignore
    autocrlf = false
[alias]
    # Commit actions
    amend = commit --amend --no-edit
    edit = commit --amend

    # Helper
    unmerged = diff --name-only --diff-filter=U
    staged = diff --cached
    download = clone --depth=1
    show-latest-changes = !git fetch && git log --oneline @..@{u}
    open-remote = !open $(git remote show origin | sed -n 2p | cut -d' ' -f5)

    # Stash utils
    # Like "git checkout -- ." but actually stash it
    discard = !git stash save `date`
    restore = stash apply

    # Utility
    ctags = !.git/hooks/ctags
    dirdiff = difftool --tool vdwrap --dir-diff

    # Type of merge
    fastforward = merge --ff-only
    mergecommit = merge --no-ff

    # Listing
    tags = tag -l
    branches = branch -av
    stashes = stash list
    refs = reflog -10
    logs = log --no-merges --format='(%h) %an: %s' -15

    # Log Formats
    patchlog = log --decorate -p
    statlog = log --decorate --stat
    graph = log --graph --decorate --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue) <%an>%Creset'
    graph2 = log --decorate --graph --pretty=format:'%Cred%h %C(yellow)%ad%Creset | %s%d %C(blue)[%an]' --date=local
[grep]
    extendRegexp = true
    lineNumber = true
[diff]
    tool = vdwrap
[difftool]
    prompt = false
[difftool "vdwrap"]
    cmd = vdwrap $LOCAL $REMOTE
[merge]
    tool = vimdiff
    log = true
[mergetool]
    prompt = false
    keepBackup = false
[rerere]
    enabled = true
[gpg]
    program = gpg2
