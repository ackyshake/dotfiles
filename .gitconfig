[user]
    name = Akshay Hegde
    email = code@akshay"-hegde".com
[log]
    date = iso
[credential]
    helper = osxkeychain
[init]
    templatedir = ~/.git_template
[commit]
    gpgsign = true
    verbose = true
[push]
    default = current
[color]
    ui = auto
[advice]
    statusHints = false
    resolveConflict = false
[core]
    excludesfile = /Users/ajh/.gitignore
    autocrlf = false
[grep]
    lineNumber = true
    patternType = perl
[alias]
    # Helper
    unmerged = diff --name-only --diff-filter=U
    show-latest-changes = !git fetch && git log --oneline @..@{u}
    open = !open $(git remote -v | head -n1 | cut -f2 | cut -d' ' -f1 | sed -e "s%:%/%" | sed -e "s%git@%https://%")
    topmost = show -s --pretty=format:'%H (%s)'
    copy-rev = !git rev-parse --short @ | tr -d '\n' | pbcopy && echo "Copied $(pbpaste)"

    # Stash utils
    # Like "git checkout -- ." but actually stash it
    discard = !git stash save `date`
    restore = stash apply

    # Utility
    ctags = !.git/hooks/ctags
    dirdiff = difftool --tool vdwrap --dir-diff

    # Listing
    tags = tag -l
    branches = branch -av
    stashes = stash list
    refs = reflog -10
    logs = log --no-merges --pretty=format:'%C(auto)%h%x09%an%x09%ad%x09%s%x09%d' -15

    # Log Formats
    patchlog = log --decorate -p
    statlog = log --decorate --stat
[diff]
    tool = vdwrap
[difftool]
    prompt = false
[difftool "vdwrap"]
    cmd = vdwrap $LOCAL $REMOTE
[merge]
    tool = vimdiff
    log = true
[mergetool]
    prompt = false
    keepBackup = false
[gpg]
    program = gpg2
