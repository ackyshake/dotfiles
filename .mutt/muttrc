# General Behaviors {{{1
set beep = no
set beep_new = yes
set confirmappend = no
set mark_old = no
set quit = ask-yes
set sleep_time = 0
set timeout = 10
set wait_key = no
set read_inc = 100
set write_inc = 100

# Mail Options {{{1
set mail_check_stats = yes
set size_show_bytes = yes
set ssl_force_tls = yes
set ssl_starttls = no

# Accounts {{{1
source ~/.mutt/accounts

# Composing {{{1
set abort_nosubject = no
set abort_unmodified = no
set delete = ask-yes
set edit_headers = yes
set fast_reply = yes
set include = yes
set ispell = "aspell --mode=email check"
set mime_forward = ask-yes
set print = no
set fcc_delimiter = ','

# Viewing {{{1
set tilde = yes
set markers = no
unignore Content-Type:
auto_view text/html
alternative_order text/plain text/enriched text/html

# Maildir {{{1
set mbox_type = Maildir
set folder = "~/.mail/fastmail"
set spoolfile = "~/.mail/fastmail/Inbox"
set postponed = "=Drafts"
set record = "=Sent"
set trash = "=Trash"

# Miscellany Locations {{{1
set header_cache = "~/.mutt/cache/headers"
set tmpdir = "~/.mutt/cache/tmp"
set attach_save_dir = "$tmpdir/attachments"
set mailcap_path = "~/.mutt/mailcap"
set signature = "~/.mutt/signature"
set alias_file = "~/.mutt/aliases"
source $alias_file

# History {{{1
set history_file = "$tmpdir/history"
set history_remove_dups = yes
set history = 3000
set error_history = $history
set save_history = $history

# Mailboxes {{{1
source ~/.mutt/mailboxes-fastmail

# GPG {{{1
set pgp_default_key = "0x0AC668879C59205C"
set crypt_use_gpgme = yes
set postpone_encrypt = yes

# Mailing Lists {{{1
source ~/.mutt/subscriptions

# Views {{{1
# Index {{{2
set index_format="%Z  (%?l?%4l&%4c?)  %?X?ðŸ“Ž&  ?  %d  %-25.25F  %?M?(%02M)&  ?  %s"
set date_format = "%FT%T%z"
set sort = "threads"
set delete = yes

# Status {{{2
set status_format=" %h: %f (msgs:%?M?%M/?%m size:%l%?n? new:%n?%?d? del:%d?%?F? flag:%F?%?t? tag:%t?%?p? post:%p?%?b? inc:%b?%?l??) %> (%s/%S) (%P) "

# Pager {{{2
set pager_index_lines = 9
set pager_context = 5
set pager_stop = yes
set pager_format = " %n â€”  %s %* (%P)   "
mime_lookup application/octet-stream

# Attachments {{{2
set attach_format = "%u%D%I %t%4n %T%.40d%> [%m/%M, %e%?C?, %C?, %s] "

# Sidebar {{{2
set sidebar_divider_char = 'Â¦'
set sidebar_visible = yes
set sidebar_width = 25
set sidebar_format = "%B%?N? [%N]?%* %S"
set sidebar_short_path = yes
set sidebar_folder_indent = yes

# Key Bindings {{{1
# Generic Key Bindings {{{2
bind generic,index,pager,browser,attach,compose gh help
bind generic,index,pager,browser,attach,compose ? search-reverse

# Index Key Bindings {{{2
bind index gg first-entry
bind index G last-entry
bind index gd delete-thread
bind index gD undelete-thread
bind index gt tag-thread
bind index \Cr group-reply
bind index \Cd half-down
bind index \Cu half-up
bind index \Cf next-page
bind index \Cb previous-page
bind index N search-opposite
bind index gr toggle-new
bind index <space> collapse-thread
bind index g<space> collapse-all
bind index <BackTab> previous-new-then-unread

# Pager Key Bindings {{{2
bind pager gg top
bind pager G bottom
bind pager gd delete-thread
bind pager gD undelete-thread
bind pager j next-line
bind pager k previous-line
bind pager N search-opposite
bind pager \Cd half-down
bind pager \Cu half-up
bind pager \Cb previous-page
bind pager \Cf next-page
bind pager \Ct skip-quoted
bind pager <BackTab> previous-new-then-unread

# Sidebar Key Bindings {{{2
bind index,pager <up> sidebar-prev
bind index,pager <down> sidebar-next
bind index,pager gp sidebar-prev-new
bind index,pager gn sidebar-next-new
bind index,pager go sidebar-open
bind index,pager B sidebar-toggle-visible

# Macros {{{1
macro index \C^ "<shell-escape>$HOME/.mutt/functions/check 0 -a<enter>" "synchronize maildir"
macro index zz '<enter-command>set menu_move_off<enter><enter-command>set menu_context=1000<enter><enter-command>reset menu_context<enter>' "center view at cursor line"
macro pager gu '<enter-command>set pipe_decode<enter><pipe-message>urlview<enter><enter-command>unset pipe_decode<enter>' 'scan and display linked urls'
macro index d "<tag-prefix><enter-command>unset resolve<enter><clear-flag>N<enter-command>set resolve<enter><tag-prefix><delete-message>" "mark read and delete"
macro index gA "<tag-prefix><enter-command>unset resolve<enter><clear-flag>N<enter-command>set resolve<enter><tag-prefix><save-message>=Archive<enter>" "archive message"
macro pager gA "<save-message>=Archive<enter>" "archive message"
macro index gN "<tag-prefix><enter-command>unset resolve<enter><clear-flag>N<enter-command>set resolve<enter><tag-prefix><save-message>=Archive/Notifications<enter>" "archive notification"
macro pager gN "<save-message>=Archive/Notifications<enter>" "archive notification"
macro index S "<tag-prefix><enter-command>unset resolve<enter><clear-flag>N<enter-command>set resolve<enter><tag-prefix><save-message>=Archive/VerifiedSpam<enter>" "mark as spam"

