## Aliases ##

# General aliases
alias c="clear"
alias cp="cp -vi"
alias rm="rm -v"
alias mv="mv -vi"
alias ls="ls -A -G"
alias sl="ls"
alias tmux="tmux -u2"
alias vi="/usr/local/bin/vim"
alias weechat="weechat-curses"
alias chpwn="chown"
alias python="python3"
alias ipython="ipython3"

# Useful aliases
alias ql="qlmanage -p 2>/dev/null"
alias ping="ping -c 5"
alias flush="dscacheutil -flushcache"
alias unzip="unzip -d ~/Downloads"
alias tnotify='terminal-notifier -title "Terminal" -activate com.googlecode.iterm2 -message'

# geez fingers
alias heroky="heroku"
alias cim="vim"
# vim: ft=zsh
