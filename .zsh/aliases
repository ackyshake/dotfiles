## Aliases ##

# General aliases
alias c="clear"
alias cp="cp -vi"
alias mv="mv -vi"
alias curl="/usr/local/Cellar/curl/7.36.0/bin/curl"
alias irc="weechat-curses"
alias tat="tmux att"
alias atom="open -a atom"
alias muxd="tmuxinator start default"
if [ -x /usr/local/bin/gls ]; then
    alias ls="gls --color -A"
else
    alias ls="ls -AG"
fi

# Git aliases
alias g="git"
alias gst="git status -sb"
alias gcopy="git log -n 1 | head -n 1 | cut -d ' ' -f2 | pbcopy && echo 'Copied `pbpaste`'"

# Edit stuff
alias vconf="vim ~/dotfiles/.vimrc"
alias tconf="vim ~/dotfiles/.tmux.conf"
alias zconf="vim ~/dotfiles/.zshrc"

# Useful aliases
alias history-stat="history 0 | awk '{print \$2}' | sort | uniq -c | sort -n -r | head"
alias ping="ping -c 5"
alias pgrep="pgrep -l"
alias flush="dscacheutil -flushcache"
alias unzip="unzip -d ~/Downloads"
alias upd="brew update; brew outdated; brew upgrade"
alias compl="rm -rf ~/.zcomp* ~/.cache/zcomp* && compinit"
alias betty="~/Documents/Repositories/betty/main.rb"
# vim: ft=zsh
