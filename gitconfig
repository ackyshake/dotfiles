[core]
    editor = vim
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[alias]
    amend = commit --amend
    ammend = commit --amend
    co = checkout
    c = commit -m
    ca = commit -am
    s = status
    st = status
    stat = status
[format]
    pretty = format:%C(blue)%ad%Creset %C(yellow)%h%C(green)%d%Creset %C(blue)%s %C(magenta) [%an]%Creset
[merge]
    summary = true
    verbosity = 1
